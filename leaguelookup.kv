            app.root.transition.direction = "right"

    # Labels
    GridLayout:
        cols: 4
        pos_hint: {'top': .8}
        size_hint: 1, .05

        # Back Button
        Button:
            text: '<- Back'
            on_release:
                app.root.current = 'allChampions'
                app.root.transition.direction = "right"

        # Sort by champion name
        Button:
