GuiManager:
    HomeGui:
    ProfileGui:
    MatchGui:
    SettingsGui:
    AllChampionsGui:
    SingleChampionGui:

# ==========================================================================================
#       Home Gui: Contains summoner lookup, region selection, and favorites
# ==========================================================================================
<HomeGui>:
    name: "home"
    summoner_name: summonerName
    region_selection: regionSelection
    history_grid_layout: historyGridLayout
    favorites_grid_layout: favoritesGridLayout
    # Background image
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/background.png"

    FloatLayout:
        size: root.width, root.height

        Image:
            pos_hint: {"top":1.4}
            source: "images/logo.png"

        # Summoner search
        Spinner:
            size_hint: .1, .07
            pos_hint: {"x":.6, "y":.6}
            id: regionSelection
            text: "Region"
            values: "NA", "BR", "EUN", "EUW", "JP", "KR", "LA1", "LA2", "OC", "TR", "RU"
        Label:
            size_hint: .4, .07
            pos_hint: {"x":.2, "y":.66}
            text: "Summoner Name"
            font_name: 'font/Friz Quadrata Bold/Friz Quadrata Bold.otf'
        TextInput:
            size_hint: .4, .07
            pos_hint: {"x":.2, "y":.6}
            id: summonerName
            multiline: False
            on_text_validate:
                root.summoner_search()
        Button:
            size_hint: .1, .07
            pos_hint: {"x":.7, "y":.6}
            text: "Search"
            on_release:
                root.summoner_search()
                app.root.transition.direction = "left"

        # Labels for history and favorites
        Label:
            text: "Favorites"
            font_name: 'font/Friz Quadrata Bold/Friz Quadrata Bold.otf'
            pos_hint: {"x": -.32, "y": .03}
        Label:
            text: "History"
            font_name: 'font/Friz Quadrata Bold/Friz Quadrata Bold.otf'
            pos_hint: {"x": .25, "y": .03}

        Button:
            text: "Settings"
            pos_hint: {'x': .4}
            size_hint: .15 , .075
            on_release:
                app.root.current = "settings"
                app.root.transition.direction = "left"

        # Favorites Scroll view
        ScrollView:
            pos_hint: {"bottom": .2, "x": .03}
            size_hint: .4, .5
            GridLayout:
                id: favoritesGridLayout
                cols: 2
                height: self.minimum_height
                size_hint: None, None

        # History scroll view
        ScrollView:
            pos_hint: {"bottom": .2, "x":.6}
            size_hint: .4, .5
            GridLayout:
                id: historyGridLayout
                cols: 2
                height: self.minimum_height
                size_hint: None, None


# ==========================================================================================
#       Profile Gui: Contains summoner information, and match history
# ==========================================================================================
<ProfileGui>:
    name: "profile"
    profile_summoner_name: profileSummonerName
    profile_summoner_level: profileSummonerLevel

    profile_solo_rank: profileSoloRank
    profile_solo_rank_icon: profileSoloRankIcon
    profile_solo_win_loss: profileSoloWinLoss

    profile_flex_rank: profileFlexRank
    profile_flex_win_loss: profileFlexWinLoss
    profile_flex_rank_icon: profileFlexRankIcon

    profile_match_history: profileMatchHistory

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/background.png"

    FloatLayout:
        Button:
            pos_hint: {"top":1}
            size_hint: 1, .15
            background_normal: "images/logo.png"
            on_release:
                app.root.current = "home"
                app.root.transition.direction = "left"

        # Summoner name and level
        Label:
            id: profileSummonerName
            font_size: (int(self.height/15) + int(self.width/15)) / 2
            pos_hint: {'y': 0.25}
        Label:
            id: profileSummonerLevel
            pos_hint: {'y': 0.15}
            font_size: (int(self.height/15) + int(self.width/15)) / 4

        # Solo Rank Grid Layout
        GridLayout:
            cols: 1
            size_hint: .3, .2
            pos_hint: {'top': 0.8, 'x': .05}
            col_default_width: self.width
            Label:
                text: "Solo Rank"
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Image:
                id: profileSoloRankIcon
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: profileSoloRank
                canvas.before:
                    Color:
                        rgba: .02, .18, .33, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: profileSoloWinLoss
                canvas.before:
                    Color:
                        rgba: .02, .18, .33, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        # Flex Rank Grid Layout
        GridLayout:
            cols: 1
            size_hint: .3, .2
            pos_hint: {'top': 0.8, 'x': 0.65}
            col_default_width: self.width
            row_default_height: self.minimum_height
            Label:
                text: "Flex Rank"
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Image:
                id: profileFlexRankIcon
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: profileFlexRank
                canvas.before:
                    Color:
                        rgba: .02, .18, .33, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: profileFlexWinLoss
                canvas.before:
                    Color:
                        rgba: .02, .18, .33, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        # Filter, Live game, and champion stats buttons grid layout
        GridLayout:
            cols: 6
            pos_hint: {'top': 0.585}
            size_hint: 1, 0.075
            Button:
                text: "Live Game"
            Button:
                text: "All Games"
                on_release:
                    root.set_all_games()
            Button:
                text: "Ranked: Solo"
                on_release:
                    root.set_ranked_solo()
            Button:
                text: "Ranked Flex"
                on_release:
                    root.set_ranked_flex()
            Button:
                text: "Clash"
                on_release:
                    root.set_ranked_clash()
            Button:
                text: "Champion Stats"
                on_release:
                    app.root.current = "allChampions"
                    app.root.transition.direction = "left"

        # Match History Scroll view
        ScrollView:
            pos_hint: {"bottom": .2, 'x':.01}
            size_hint: 1, .5
            GridLayout:
                id: profileMatchHistory
                cols: 6
                height: self.minimum_height
                size_hint: 1, None
                spacing: 0 , 20


# ==========================================================================================
#       Match Gui: Contains summoner lookup, region selection, and favorites
# ==========================================================================================
<MatchGui>:
    name: 'match'
    match_grid_layout: matchGridLayout

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/background.png"

    FloatLayout:
        Button:
            pos_hint: {"top":1}
            size_hint: 1, .15
            background_normal: "images/logo.png"
            on_release:
                app.root.current = "home"
                app.root.transition.direction = "right"

        # Match Scroll view
        ScrollView:
            pos_hint: {'y': .20 ,'x':.00}
            size_hint: 1, .65
            GridLayout:
                id: matchGridLayout
                cols: 8
                height: self.minimum_height
                size_hint: 1, None
                spacing: self.width/16 , 20

                Label:
                    text: "Summoner"
                Label:
                    text: "Champion"
                Label:
                    text: "Stats"
                Label:
                    text: "Items"
                    size_hint: None, None
                    width: root.width/6
                Label:
                    text: "Damage"
                Label:
                    text: "Wards"
                Label:
                    text: "Objectives"
                Label
                    text: "Towers"

        # Back Button
        Button:
            pos_hint: {"bottom":.5}
            size_hint: 1, .15
            text: "Back"
            on_release:
                app.root.current = "profile"

# ==========================================================================================
#       Settings Gui:
# ==========================================================================================
<SettingsGui>:
    name: 'settings'

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/background.png"

    Button:
        pos_hint: {"top":1}
        size_hint: 1, .15
        background_normal: "images/logo.png"
        on_release:
            app.root.current = "home"
            app.root.transition.direction = "right"


# ==========================================================================================
#       All Champions Gui: All Champions stats for a summoner
# ==========================================================================================
<allChampionsGui>:
    name: 'allChampions'
    all_champions_grid_layout: allChampionsGridLayout
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/background.png"

    Button:
        pos_hint: {"top":1}
        size_hint: 1, .15
        background_normal: "images/logo.png"
        on_release:
            app.root.current = "home"
            app.root.transition.direction = "right"

    # Labels
    GridLayout:
        cols: 4
        pos_hint: {'top': .8}
        size_hint: 1, .05

        # Back Button
        Button:
            text: '<- Back'
            on_release:
                app.root.current = 'profile'
                app.root.transition.direction = "right"

        # Sort by champion name
        Button:
            text: 'Champion'
            on_release:
                root.sort_by_champion()

        # Sort by champion win rate
        Button:
            text: 'Win Rate'
            on_release:
                root.sort_by_win_rate()

        # Update the all_champion_win_rates.csv
        Button:
            text: 'Update'
            on_release:
                root.update_all_champions()

    ScrollView:
        size_hint: 1, .65
        pos_hint: {'top': .7}
        GridLayout:
            id: allChampionsGridLayout
            cols: 5
            height: self.minimum_height
            size_hint: 1, None
            spacing: self.width/16 , 20


# ==========================================================================================
#       Single Champion Gui: All Champions stats for a summoner
