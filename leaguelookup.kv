GuiManager:
    HomeGui:
    ProfileGui:
    #AllChampionsGui:
    #SingleChampionGui:


<HomeGui>:
    name: "home"
    summoner_name: summonerName
    region_selection: regionSelection
    # Todo
    #   Float layout
    GridLayout:
        cols:1
        size: root.width, root.height
        Label:
            text: "League Lookup"
        GridLayout:
            cols:3
            Label:
                text: "Summoner Name"
            Spinner:
                id: regionSelection
                text: "Region"
                values: "NA", "BR", "EUN", "EUW", "JP", "KR", "LA1", "LA2", "OC", "TR", "RU"
            TextInput:
                id: summonerName
                multiline: False
                on_text_validate:
                    root.check_summoner_name()
        Button:
            text: "Search"
            on_release:
                root.check_summoner_name()
                app.root.transition.direction = "left"

<ProfileGui>:
    name: "profile"
    Button:
        text: "Go Back"
        on_release:
            app.root.current = "home"
            app.root.transition.direction = "right"


<InvalidSearchPopup>
    FloatLayout:
        size_hint:(0.3, 0.3)
        pos_hint:{"center_x":0.5, "center_y":0.5}
        Label:
            text: "Invalid Search"
            pos_hint: {"x":0.2, "top":1}
            size_hint: 0.6, 0.2
        Button:
            pos_hint: {"x":0.1, "y":0.1}
            size_hint: 0.8, 0.2
            text: "Go Back"

